@model Sistema_de_Viajes_FarSiman.Models.Employee_Branch

@{
    ViewData["Title"] = "CreateEmployeBranch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Asignar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmployeBranch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employee_id" class="control-label"></label>
                <input asp-for="employee_id" class="form-control" />
                <span asp-validation-for="employee_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="branch_id" class="control-label"></label>
                <input asp-for="branch_id" class="form-control" />
                <span asp-validation-for="branch_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="distance_km" class="control-label"></label>
                <input asp-for="distance_km" class="form-control" />
                <span asp-validation-for="distance_km" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
<div>
    <a asp-action="EmployeeBranchTable">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}